@model TheKidPage.Models.Joke
@{
    Layout = "_JokesLayout";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Contact</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Have A Joke?</h4></div>
        <div class="panel-body">
            <form class="p-a-1" asp-action="JokeForm" method="post">
               
                <div class="form-group">
                    <label asp-for="Name"> Your Name please:</label>
                    <input class="form-control" asp-for="Name" />
                </div>
                
                <div class="form-group">
                    <label asp-for="KeyWord">Joke about?(one word)</label>
                    <textarea class="form-control" rows="1" asp-for="KeyWord"></textarea>

                </div>
                <div class="form-group">
                    <label asp-for="JokeLine">Leave Your Joke here for Reivew</label>
                    <textarea class="form-control" rows="5" asp-for="JokeLine"></textarea>

                </div>

                <button class="btn btn-primary" type="submit">Submit</button>

            </form>
        </div>
    </div>

</body>

</html>
